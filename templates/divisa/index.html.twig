{% extends 'base.html.twig' %}

{% block title %}Divisa index{% endblock %}

{% block body %}
    <h1>Divisa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Compra</th>
                <th>Venta</th>
                <th>MontoRecibido</th>
                <th>MontoEntregado</th>
                <th>TipoCambio</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for divisa in divisas %}
            <tr>
                <td>{{ divisa.id }}</td>
                <td>{{ divisa.compra }}</td>
                <td>{{ divisa.venta }}</td>
                <td>{{ divisa.montoRecibido }}</td>
                <td>{{ divisa.montoEntregado }}</td>
                <td>{{ divisa.tipoCambio }}</td>
                <td>{{ divisa.fecha ? divisa.fecha|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('divisa_show', {'id': divisa.id}) }}">show</a>
                    <a href="{{ path('divisa_edit', {'id': divisa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('divisa_new') }}">Create new</a>
{% endblock %}
